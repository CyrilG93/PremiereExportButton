<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0" ExtensionBundleId="com.cyrilg93.exportbutton" ExtensionBundleVersion="1.0.8"
                   ExtensionBundleName="Export Button" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Author>CyrilG93</Author>
  <Contact>cyril.vellas@bluewin.ch</Contact>
  <Legal>All rights reserved.</Legal>
  <Abstract>Quick export button for Premiere Pro via Adobe Media Encoder</Abstract>
  <ExtensionList>
    <Extension Id="com.cyrilg93.exportbutton.panel" Version="1.0.8"/>
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
      <Host Name="PPRO" Version="[25.5,99.9]"/>
    </HostList>
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="11.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  <DispatchInfoList>
    <Extension Id="com.cyrilg93.exportbutton.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./client/index.html</MainPath>
          <ScriptPath>./host/host.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>Export Button</Menu>
          <Geometry>
            <Size>
              <Height>160</Height>
              <Width>120</Width>
            </Size>
            <MinSize>
              <Height>100</Height>
              <Width>100</Width>
            </MinSize>
            <MaxSize>
              <Height>400</Height>
              <Width>400</Width>
            </MaxSize>
          </Geometry>
          <Icons/>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
